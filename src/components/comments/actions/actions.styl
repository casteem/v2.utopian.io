@import "~variables"

div.u-comments-actions {
  display flex
  width 100%
  flex-direction column
  .actions-line {
    width 100%
    display flex
    justify-content space-between
  }
  .actions-reply {
    margin-top 10px
    margin-bottom 10px
    .q-field {
      margin-bottom 0
    }
    .reply-buttons {
      margin-top 10px
      .q-btn + .q-btn {
        margin-left 5px
      }
    }
  }
  .payout.declined {
    span {
      text-decoration line-through
    }
  }
  .action-item {

    &.action-item-reply {
      float right
    }
    span.vote-count {
      margin-right 10px
      &.primary {
        color $primary
      }
    }

    & > * {
      display inline-block
    }
    .q-icon, .q-btn .q-icon {
      margin-top -2px
      font-size 16px
    }
    .q-btn {
      color $grey-7
      padding 0
      min-height 1px
      line-height 14px

      span {
        font-weight 700
        line-height 1em
        // color $grey-7
        // font-family "Roboto Mono"
        // line-height 16px
        font-size 14px
      }
    }
    .q-focus-helper {
      display none
    }
    span.separator {
      margin-left 10px
    }
    font-weight 700
    color $grey-7
    // font-family "Roboto Mono"
    // line-height 16px
    font-size 14px
    line-height 14px


    .q-icon {
      // width 10px
      text-align left
      font-size 16px
    }



    &.space-icon {
      .q-icon {
        margin-right 5px
      }

    }
    & + .action-item {
      //margin-left 12px
      &:before {
        content: '‚óè'
        padding-left 8px
        padding-right 8px
        opacity 0.4
      }
    }
  }
}

.voting-slider {
  min-width: 300px
  padding: 40px 20px 20px !important
  overflow-x hidden !important
  .q-btn-group {
    margin 10px 0 20px 0
  }
  .vote-worth {
    text-align center
    width 100%
    display block
    margin-top 10px
  }
}
